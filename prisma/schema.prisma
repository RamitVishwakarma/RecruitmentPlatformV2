generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Aptitude {
  id                Int        @id @default(autoincrement())
  aptitudeTitle     String
  aptitudeShortDesc String     @db.VarChar(255)
  aptitudeLongDesc  String?     @db.VarChar(1000)
  aptitudeDomain    String
  aptitudeYear      Int
  aptitudeQuestions Question[] @relation
  aptitudeDuration  Int
  aptitudeType      String 
}
